{
    "version": 1,
    "rules": [
        {
            "regexp": "(Address|Transaction|Path|Network|Type|Sender|Receive|Delegator|Delegate|Amount|Fee|Total|Nonce|Valid until|Memo).*",
            "actions": [
                [ "button", 2, true ],
                [ "button", 2, false ]
            ]
        },
        {
            "regexp": "(Approve|Generate)",
            "actions": [
                [ "button", 1, true ],
                [ "button", 2, true ],
				[ "button", 1, false ],
                [ "button", 2, false ]
            ]
        }
    ]
}
